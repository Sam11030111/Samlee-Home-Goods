<div class="card has-background-white has-shadow">
  <div class="card-image">
    <% if product.image.attached? %>
      <figure class="image is-4by3">
        <img src="<%= url_for(product.image) %>" width="300" height="300" class="product-card-image" alt="Product Image">
      </figure>
    <% end %>
  </div>
  <div class="card-content">
    <a href="<%= product_path(product) %>" class="product-name"><%= product.name %></a>
    <div class="is-flex is-align-items-center mt-2">
      <img src="<%= image_path('star.png') %>" alt="Star" class="star-image">
      <p class="average-rating ml-2"><%= product.average_rating %></p>
    </div>
  </div>
</div>