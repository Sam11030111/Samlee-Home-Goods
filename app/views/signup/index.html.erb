<div class="container py-2 has-background-light signup-container">
  <h1 class="title has-text-centered is-4 has-text-black pt-4">Sign Up</h1>
  <form action="/signup" method="post" enctype="multipart/form-data">
    <div class="box has-background-light">
      <!-- First Name -->
      <div class="field">
        <label class="label has-text-black">First Name</label>
        <div class="control">
          <input class="input has-background-white has-text-black" type="text" name="first_name" placeholder="Enter your first name" required>
        </div>
      </div>

      <!-- Last Name -->
      <div class="field">
        <label class="label has-text-black">Last Name</label>
        <div class="control">
          <input class="input has-background-white" type="text" name="last_name" placeholder="Enter your last name" required>
        </div>
      </div>

      <!-- Email -->
      <div class="field">
        <label class="label has-text-black">Email</label>
        <div class="control">
          <input class="input has-background-white" type="email" name="email" placeholder="Enter your email" required>
        </div>
      </div>

      <!-- Password -->
      <div class="field">
        <label class="label has-text-black">Password</label>
        <div class="control">
          <input class="input has-background-white" type="password" name="password" placeholder="Enter your password" required>
        </div>
      </div>

      <!-- Confirm Password -->
      <div class="field">
        <label class="label has-text-black">Confirm Password</label>
        <div class="control">
          <input class="input has-background-white" type="password" name="password_confirmation" placeholder="Re-enter your password" required>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="field is-grouped is-justify-content-center mt-6">
        <div class="control">
          <button type="submit" class="button is-primary">Sign Up</button>
        </div>
      </div>
    </div>
  </form>
</div>
